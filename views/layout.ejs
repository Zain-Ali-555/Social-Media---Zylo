<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Social Media' %></title><link rel="icon" type="image/png" href="/images/logo.png">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <% if ((typeof user !== 'undefined' && user) || (typeof isAuthenticated !== 'undefined' && isAuthenticated)) { %>
        <%- include('partials/header') %>
    <% } %>
    
    <main class="container">
        <% if (messages && messages.success && messages.success.length > 0) { %>
            <div class="alert alert-success"><i class="fas fa-check-circle"></i> <%= messages.success %></div>
        <% } %>
        
        <% if (messages && messages.error && messages.error.length > 0) { %>
            <div class="alert alert-error"><i class="fas fa-exclamation-circle"></i> <%= messages.error %></div>
        <% } %>
        
        <%- body %>
    </main>
    
    <% if ((typeof user !== 'undefined' && user) || (typeof isAuthenticated !== 'undefined' && isAuthenticated)) { %>
        <%- include('partials/footer') %>
    <% } %>
    
    <script>
        // Theme toggle functionality
        function toggleTheme() {
            const html = document.documentElement;
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';
            
            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);

            // Update theme in database
            fetch('/theme/toggle', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ theme: newTheme })
            });
        }

        // Apply saved theme on page load
        document.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-theme', savedTheme);
        });
    </script>
</body>
</html> 